@model IEnumerable<Employee>

@{
    ViewBag.Title = "Employee List";
}

<div class="card-deck">
    @foreach (var employee in Model)
    {
        var photoPath = "~/images/" + (employee.PhotoPath ?? "noimage.png");

        <div class="card m-3" style="min-width:18rem; max-width:30.5%;">
            <div class="card-header">
                <h3>@employee.Name</h3>
            </div>
            <div class="card-body"><img class="card-img-top" style="width:100%; height:300px;
                object-fit:cover" src="@photoPath" asp-append-version="true" /></div>
            <div class="card-footer text-center">
                <a asp-controller="home" asp-action="details" asp-route-id="@employee.Id" class="btn btn-primary m-1">View</a>
                <a class="btn btn-primary m-1" asp-controller="home" asp-action="edit" asp-route-id="@employee.Id">Edit</a>
                <a class="btn btn-danger m-1" asp-controller="home" asp-action="delete" asp-route-id="@employee.Id">Delete</a>
            </div>
        </div>
    }
</div>

